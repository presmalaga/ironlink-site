---
import '../styles/globals.css';
import Navbar from './Navbar.astro';
import Footer from './Footer.astro';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="IronLink Technologies offers elite IT consulting, infrastructure modernization, and cybersecurity services for forward-thinking organizations." />

  <!-- Dynamic title -->
  <title>{Astro.props.title ?? "IronLink Technologies"}</title>

  <!-- Open Graph / Social -->
  <meta property="og:title" content={Astro.props.title ?? "IronLink Technologies"} />
  <meta property="og:description" content="Strategic IT solutions built for mission-critical results. Empowering businesses with secure, scalable infrastructure." />
  <meta property="og:image" content="/logo.png" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://ironlink.vercel.app" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={Astro.props.title ?? "IronLink Technologies"} />
  <meta name="twitter:description" content="Elite IT consulting and cybersecurity expertise. Explore our services and solutions." />
  <meta name="twitter:image" content="/logo.png" />

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/logo.png" />
  <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "IronLink Technologies",
  "url": "https://ironlink.vercel.app",
  "logo": "https://ironlink.vercel.app/logo.png",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1-800-IRONLINK",
    "contactType": "Customer Support"
  }
}
</script>
</head>
<body>
  <Navbar />
  <main class="min-h-screen">
    <slot />
  </main>
  <Footer />
</body>
</html>
